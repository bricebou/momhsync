{% block body %}
  <section id="body-wrapper" class="section instagallery">
    <section class="container {{ grid_size }}">
      <div class="columns">
        <div class="column col-12">
          <h1>{{page.title}}</h1>

          {% include 'partials/insta/insta-item.html.twig' %}
        </div>
      </div>

      {% if not page.isLast or not page.isFirst %}
        {% include 'partials/post-pagination.html.twig' %}
      {% endif %}
    </section>
  </section>
{% endblock %}
